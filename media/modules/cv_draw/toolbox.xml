<category name="%{BKY_CAT_AI_DRAW}" colour="%{BKY_COLOUR_AI}">
    <!-- 矩形 -->
    <block type="py_ai_draw_rect">
        <value name="START">
            <shadow type="py_ai_point">
                <field name="X">0</field>
                <field name="Y">0</field>
            </shadow>
        </value>
        <value name="END">
            <shadow type="py_ai_point">
                <field name="X">100</field>
                <field name="Y">100</field>
            </shadow>
        </value>
        <value name="COLOR">
            <shadow type="py_ai_color">
                <field name="B">255</field>
                <field name="G">0</field>
                <field name="R">0</field>
            </shadow>
        </value>
        <value name="THICKNESS">
            <shadow type="py_math_number"><field name="NUM">2</field></shadow>
        </value>
    </block>

    <!-- 圓形 -->
    <block type="py_ai_draw_circle">
        <value name="CENTER">
            <shadow type="py_ai_point">
                <field name="X">50</field>
                <field name="Y">50</field>
            </shadow>
        </value>
        <value name="RADIUS">
            <shadow type="py_math_number"><field name="NUM">20</field></shadow>
        </value>
        <value name="COLOR">
            <shadow type="py_ai_color">
                <field name="B">0</field>
                <field name="G">255</field>
                <field name="R">0</field>
            </shadow>
        </value>
        <value name="THICKNESS">
            <shadow type="py_math_number"><field name="NUM">2</field></shadow>
        </value>
    </block>

    <!-- 直線 -->
    <block type="py_ai_draw_line">
        <value name="START">
            <shadow type="py_ai_point">
                <field name="X">0</field>
                <field name="Y">0</field>
            </shadow>
        </value>
        <value name="END">
            <shadow type="py_ai_point">
                <field name="X">100</field>
                <field name="Y">100</field>
            </shadow>
        </value>
        <value name="COLOR">
            <shadow type="py_ai_color">
                <field name="B">0</field>
                <field name="G">0</field>
                <field name="R">255</field>
            </shadow>
        </value>
        <value name="THICKNESS">
            <shadow type="py_math_number"><field name="NUM">2</field></shadow>
        </value>
    </block>

    <!-- 文字 -->
    <block type="py_ai_draw_text">
        <value name="TEXT">
            <shadow type="py_text"><field name="TEXT">Hello</field></shadow>
        </value>
        <value name="POS">
            <shadow type="py_ai_point">
                <field name="X">10</field>
                <field name="Y">30</field>
            </shadow>
        </value>
        <value name="COLOR">
            <shadow type="py_ai_color">
                <field name="B">255</field>
                <field name="G">255</field>
                <field name="R">255</field>
            </shadow>
        </value>
        <value name="SCALE">
            <shadow type="py_math_number"><field name="NUM">1</field></shadow>
        </value>
    </block>

    <!-- 中文文字 (Pillow) -->
    <block type="py_ai_draw_text_zh">
        <value name="TEXT">
            <shadow type="py_text"><field name="TEXT">你好，Cocoya！</field></shadow>
        </value>
        <value name="POS">
            <shadow type="py_ai_point">
                <field name="X">10</field>
                <field name="Y">30</field>
            </shadow>
        </value>
        <value name="COLOR">
            <shadow type="py_ai_color">
                <field name="B">255</field>
                <field name="G">255</field>
                <field name="R">255</field>
            </shadow>
        </value>
        <value name="SIZE">
            <shadow type="py_math_number"><field name="NUM">24</field></shadow>
        </value>
    </block>

    <!-- 夾角圓弧 -->
    <block type="py_ai_draw_angle_arc">
        <value name="CENTER">
            <shadow type="py_ai_point"><field name="X">100</field><field name="Y">100</field></shadow>
        </value>
        <value name="START">
            <shadow type="py_ai_point"><field name="X">150</field><field name="Y">100</field></shadow>
        </value>
        <value name="END">
            <shadow type="py_ai_point"><field name="X">100</field><field name="Y">150</field></shadow>
        </value>
        <value name="RADIUS">
            <shadow type="py_math_number"><field name="NUM">30</field></shadow>
        </value>
        <value name="COLOR">
            <shadow type="py_ai_color"><field name="B">0</field><field name="G">255</field><field name="R">255</field></shadow>
        </value>
        <value name="THICKNESS">
            <shadow type="py_math_number"><field name="NUM">2</field></shadow>
        </value>
    </block>

    <!-- 圖片覆蓋 -->
    <block type="py_ai_draw_overlay_image">
        <value name="PATH">
            <shadow type="py_text"><field name="TEXT">resources/crown.png</field></shadow>
        </value>
        <value name="CENTER">
            <shadow type="py_ai_point">
                <field name="X">320</field>
                <field name="Y">240</field>
            </shadow>
        </value>
        <value name="WIDTH">
            <shadow type="py_math_number"><field name="NUM">100</field></shadow>
        </value>
        <value name="ANGLE">
            <shadow type="py_math_number"><field name="NUM">0</field></shadow>
        </value>
    </block>
</category>
